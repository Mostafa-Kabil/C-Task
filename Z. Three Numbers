#include <iostream>
using namespace std;

int main() {
    int k,s,z, count = 0;
    cout << "Enter K: ";
    cin >> k;
    cout << "Enter S: ";
    cin >> s;

    for (int i = 0; i <= k; i++) {
        for (int j = 0; j <= k; j++) {
            z = s - j - i;
            if (z >= 0 && z <= k) {
                count++;
            }
        }
    }

    cout << "Number of valid combinations: " << count << endl;

    return 0;
}
